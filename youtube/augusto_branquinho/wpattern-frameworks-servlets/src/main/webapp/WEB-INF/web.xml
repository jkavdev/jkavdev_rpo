<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">

	<display-name>wpattern-frameworks-servlets</display-name>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>helloServlet</servlet-name>
		<servlet-class>br.com.jkavdev.wpattern.servlets.hello.HelloServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>helloServlet</servlet-name>
		<url-pattern>/hello</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>multipleServlet</servlet-name>
		<servlet-class>br.com.jkavdev.wpattern.servlets.multiple.MultipleServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>multipleServlet</servlet-name>
		<url-pattern>/multiple</url-pattern>
	</servlet-mapping>

</web-app>