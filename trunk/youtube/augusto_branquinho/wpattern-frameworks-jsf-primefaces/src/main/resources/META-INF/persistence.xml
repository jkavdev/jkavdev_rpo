<?xml version='1.0' encoding='utf-8' ?>
<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
						http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
						
	<persistence-unit name="persistenceUnitName" transaction-type="RESOURCE_LOCAL">
		<class>org.springframework.data.jpa.domain.AbstractPersistable</class>
		<class>br.com.jkavdev.frameworks.jsf.primefaces.model.CategoryEntity</class>
		<class>br.com.jkavdev.frameworks.jsf.primefaces.model.UserEntity</class>
		<class>br.com.jkavdev.frameworks.jsf.primefaces.model.ProductEntity</class>
		
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
		</properties>
	</persistence-unit>
</persistence>
