<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
    
    <application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
	</application>
	
	<!-- reconhecendo os arquivos de propriedades de idioma -->
	<application>
		<resource-bundle>
			<!-- resources - nome da pasta -->
			<!-- lables - nome inicial do arquivo -->
			<base-name>resources.labels</base-name>
			<!-- nome no qual acessaremos pela EL - labels.menu_name -->
			<var>labels</var>
		</resource-bundle>
		<locale-config>
			<!-- idioma padrao -->
			<default-locale>pt</default-locale>
			<!-- idioma suportado -->
			<supported-locale>en</supported-locale>
		</locale-config>
	</application>
	
	<!-- reconhecendo os arquivos de mensagens -->
	<application>
		<resource-bundle>
			<base-name>resources.messages</base-name>
			<var>messages</var>
		</resource-bundle>
	</application>

</faces-config>
