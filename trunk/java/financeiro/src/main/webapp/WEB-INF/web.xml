<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">

	<!-- adicionando uma referencia a jndi criado em meta-inf -->
	<!-- informa ao tomcat que o jndi deve estar disponivel para a aplicacao -->
	<resource-ref>
		<description>DataSouce db_financeiro</description>
		<res-ref-name>jdbc/db_financeiro</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

	<!-- spring security -->
	<!-- informando que o security interceptara todas as -->
	<!-- requisicoes para verificar se quem esta requisitando -->
	<!-- possui permissao para acesso -->
	
	<!-- informa quais sao os arquivos de configuracao -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			/WEB-INF/applicationContext.xml
			/WEB-INF/applicationContext-security.xml
		</param-value>
	</context-param>
	
	<!-- declaracao do filtro -->
	<filter>
		<filter-name>springSecurityFilterChain</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>
	
	<!-- informando que todas as requisicoes sera inteceptadas -->
	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<!-- permitira que o spring security carregue os arquivos  -->
	<!-- de configuracao no momento em que a aplicacao estiver 
		sendo colocada no ar -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

</web-app>
