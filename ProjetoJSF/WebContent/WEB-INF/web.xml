<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">

	<!-- aparece o nome por exemplo se tiver gerenciando a aplicacao pelo tomcat -->
	<display-name>PrimeiroProjetoJSF</display-name>

	<!-- informando que o projeto esta em fase de desenvolvimento -->
	<!-- melhorara na visualizacao de algum erro na nossa aplicacai -->
	<context-param>
		<param-name>javax.faces.PROJECT_STAGE</param-name>
		<param-value>Development</param-value>
	</context-param>

	<!-- recebe todas as requisicoes e processa todos os ciclos de vida do jsf -->
	<!-- por isso nossas paginas html, tem que ter o caminho /faces/ para que 
		entenda que seja processado pelo jsf -->
	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<!-- para que possamos esconder nosso codigo fonte vamos dizer para jsf 
			processar todos os arquivos xhtml -->
		<!-- <url-pattern>/faces/*</url-pattern> -->
		<url-pattern>*.xhtml</url-pattern>
	</servlet-mapping>
	
	<!-- informando ao webcontainer que o encodigo dos formato dos arquivos e utf8 -->
	<filter>
		<filter-name>Encoding Filter</filter-name>
		<filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>		
	</filter>
	
	<filter-mapping>
		<filter-name>Encoding Filter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<context-param>
		<description>State saving method: 'client' or 'server' (=default). See JSF Specification 2.5.2</description>
		<param-name>javax.faces.STATE_SAVING_METHOD</param-name>
		<param-value>client</param-value>
	</context-param>

	<context-param>
		<param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
		<param-value>resources.application</param-value>
	</context-param>

	<listener>
		<listener-class>com.sun.faces.config.ConfigureListener</listener-class>
	</listener>
</web-app>