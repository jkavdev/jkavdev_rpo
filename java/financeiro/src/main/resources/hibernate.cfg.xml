<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

	<session-factory>
	
		<!-- com a criacao do jndi -->
		<!-- nao precisamos de algumas informacoes -->
		<!-- precisamos fazer uma referencia a jndi, com o datasource -->
		<property name="connection.datasource">java:/comp/env/jdbc/db_financeiro</property>
		<property name="dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>		
		<property name="current_session_context_class">thread</property>

		<property name="c3p0.min_size">5</property><!--minimo de conexoes preparadas-->
		<property name="c3p0.max_size">20</property><!--maximo de conexoes preparadas, caso seja excedido, uma excecao sera lancada-->
		<property name="c3p0.timeout">300</property><!--tempo limite para remocao de uma conexao inativa-->
		<property name="c3p0.max_statements">50</property><!--declaracao preparada para cache, para melhor desempenho-->
		<property name="c3p0.idle_test_period">3000</property><!--tempo de inatividade antes que uma conexao seja validada-->

		<property name="hbm2ddl.auto">update</property>
		<property name="show_sql">true</property>
		<property name="format_sql">true</property>
		<property name="generate_statistics">true</property><!--habilita o hibernate a coletar estatisticas, para depois melhor desempenho-->
		<property name="use_sql_comments">true</property><!--gera comentarios junto ao sql para melhor debug-->
		
		<!-- mapeando as classes a serem persistidas no banco -->
		<mapping class="br.com.javaparaweb.financeiro.usuario.Usuario" />

	</session-factory>

</hibernate-configuration>